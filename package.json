{
    "name": "budget-planner",
    "version": "1.0.0",
    "description": "Personal budget planning application",
    "type": "module",
    "engines": {
        "node": "18.x",
        "npm": "9.x"
    },
    "scripts": {
        "start": "cd server && node --require dotenv/config server.js",
        "dev:server": "cd server && nodemon --require dotenv/config server.js",
        "dev:client": "cd client && vite",
        "build": "cd client && vite build",
        "lint": "cd client && eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0"
    },
    "dependencies": {
        "@tanstack/react-query": "^5.17.19",
        "@vitejs/plugin-react": "^4.3.3",
        "axios": "^1.7.7",
        "bcrypt": "^5.1.1",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.21.1",
        "jsonwebtoken": "^9.0.2",
        "lucide-react": "^0.320.0",
        "mysql2": "^3.9.1",
        "nodemon": "^3.1.7",
        "prop-types": "^15.8.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-router-dom": "^6.22.0",
        "vite": "^5.4.11"
    },
    "devDependencies": {
        "@types/react": "^18.2.43",
        "@types/react-dom": "^18.2.17",
        "eslint": "^8.55.0",
        "eslint-plugin-react": "^7.33.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.4.5"
    }
}
